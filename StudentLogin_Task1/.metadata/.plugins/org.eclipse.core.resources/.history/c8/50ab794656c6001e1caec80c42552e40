package com.app.service;

import org.springframework.beans.factory.annotation.Autowired;

import com.app.entity.Student;
import com.app.repo.StudentRepo;

public class ServiceImpl implements Service{
	
	 @Autowired
	    private StudentRepo studentRepo;

	    @Override
	    public Student register(Student student) {
	        // Implement registration logic, e.g., saving the student to the database
	        return studentRepo.save(student);
	    }

	    @Override
	    public Student login(String email, String password) {
	        // Implement login logic, e.g., checking credentials against the database
	        return studentRepo.findByEmailAndPassword(email, password);
	    }
}
